<div class = "booking-container">
  <h1>Your Booking <%= @booking.user.first_name.capitalize %> <%= @booking.user.last_name.capitalize %></h1>
   <%= cl_image_tag @booking.car.photos.first.key %>
   <h2><%= @booking.car.name %></h2>
   <div class ="booking-det">
      <p> from <%= @booking.start_date.strftime("%d/%m/%Y") %></p>
      <p> to <%= @booking.end_date.strftime("%d/%m/%Y") %></p>
      <p> <strong>Total Price per <%=((@booking.end_date.to_time - @booking.start_date.to_time).to_i) / (60 * 60 * 24)%> days: <%=@booking.total_price = (((@booking.end_date.to_time - @booking.start_date.to_time).to_i) / (60 * 60 * 24)) * @car.price_per_day %> â‚¬ </strong></p>
   </div>
  <div class ="booking-det">
    <h4>contact the owner for any question</h4>
    <p><%= @owner.first_name.capitalize %> <%= @owner.last_name.capitalize %></p>
    <p><%= @owner.email%></p>
  </div>
  <div>
    <%= link_to profile_path do %>
    <button type="button" class="btn btn-dark">see all your bookings</button>
    <% end %>
    <%=link_to car_booking_path,  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"icon non" do%>
    <button type="button" class="btn btn-outline-danger">delete this booking</button>
    <% end %>
  </div>
</div>
