<div class="banner">
    <div class = "title">
      <h1>Get your Vehicle</h1>
      <p>The best solution to land a car without extra costs!</p>
    </div>
    <div class="d-flex justify-content-center">
      <div class="d-flex flex-column" id="searchBox">
        <h3>Find a Car in your region</h3>
        <div id = "searchbox" class="form col-xs-12">
          <%= form_with url: cars_path, method: :get, class: "d-flex" do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "City, Region, State"
             %>
             <%= submit_tag "Research", class: "btn btn-dark" %>
          <% end %>
        </div>
      </div>
    </div>
</div>

<div class="container">
  <div class="row">
    <% @cars.each do |car| %>
    <div class="cards-index col-12 col-lg-4">
      <%= link_to(car_path(car.id)) do %>
        <div class="card-article mb-5">
          <h2 class="mb-2"><%= car.name %></h2>
         <%= cl_image_tag car.photos.first.key, height: 300, width: 400, crop: :fill %>
          <p><%= car.price_per_day %></p>
          <p><%= car.location %></p>
        </div>
      <% end %>
      </div>
      <% end %>
  </div>
</div>
